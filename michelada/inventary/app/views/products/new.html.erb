
<%= form_for :product, url: products_path do |f| %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>



  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :price %><br>
    <%= f.text_area :price %>
  </p>

Brand:<%= f.collection_select(:brand_id, Brand.all, :id, :name, {}, {class: "form-control"}) %>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>